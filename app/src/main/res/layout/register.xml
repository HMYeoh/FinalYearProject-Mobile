<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/serviceImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="110dp"
            android:src="@drawable/logo_3"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="25dp"/>

        <EditText
            android:id="@+id/registerName"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="25dp"/>

        <EditText
            android:id="@+id/registerEmail"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="290dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:layout_marginTop="340dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="25dp"/>

        <EditText
            android:id="@+id/registerPhone"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="360dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginTop="410dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="25dp"/>

        <EditText
            android:id="@+id/registerPassword"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="430dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableStart="@drawable/custom_checkbox"
            android:layout_marginTop="470dp"
            android:layout_marginLeft="50dp"/>

        <TextView
            android:id="@+id/toTermsCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agree to Terms and Condition"
            android:textSize="16sp"
            android:layout_marginTop="482dp"
            android:layout_marginLeft="90dp"
            android:onClick="toTermsCondition"/>

        <Button
            android:id="@+id/registerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="520dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp" />

        <TextView
            android:id="@+id/toLoginPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Login"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:layout_marginTop="570dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:onClick="toLogin"/>

    </RelativeLayout>

</LinearLayout>