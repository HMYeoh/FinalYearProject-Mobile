<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/termsAndCondition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#2596be"
            android:padding="15dp"
            android:text="Branch Detail"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/branch"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:backgroundTint="#2596be"
            android:onClick="toBranch"
            android:src="@drawable/close_image" />



    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvBranchName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Branch Name" />

            <TextView
                android:id="@+id/tvBranch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:textSize="16sp"
                android:text="Branch Address" />

            <TextView
                android:id="@+id/branchPhoneText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:textSize="16sp"
                android:text="Branch Phone:" />

            <TextView
                android:id="@+id/tvBranchPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="120dp"
                android:textSize="16sp"
                android:text="Branch Phone" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="120dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/openingHoursText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:textSize="16sp"
                android:text="Opening Hours"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:src="@drawable/sunny_image"/>

            <TextView
                android:id="@+id/mondayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="35dp"
                android:textSize="16sp"
                android:text="Monday" />

            <TextView
                android:id="@+id/timeText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="200dp"
                android:textSize="16sp"
                android:text="9:00 AM - 5:00 PM" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:src="@drawable/sunny_image"/>

            <TextView
                android:id="@+id/tuesdayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:layout_marginLeft="35dp"
                android:textSize="16sp"
                android:text="Tuesday" />

            <TextView
                android:id="@+id/timeText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:layout_marginLeft="200dp"
                android:textSize="16sp"
                android:text="9:00 AM - 5:00 PM" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:src="@drawable/sunny_image"/>

            <TextView
                android:id="@+id/wednesdayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:layout_marginLeft="35dp"
                android:textSize="16sp"
                android:text="Wednesday" />

            <TextView
                android:id="@+id/timeText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:layout_marginLeft="200dp"
                android:textSize="16sp"
                android:text="9:00 AM - 5:00 PM" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="350dp"
                android:src="@drawable/sunny_image"/>

            <TextView
                android:id="@+id/thursdayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="350dp"
                android:layout_marginLeft="35dp"
                android:textSize="16sp"
                android:text="Thursday" />

            <TextView
                android:id="@+id/timeText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="350dp"
                android:layout_marginLeft="200dp"
                android:textSize="16sp"
                android:text="9:00 AM - 5:00 PM" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="400dp"
                android:src="@drawable/sunny_image"/>

            <TextView
                android:id="@+id/fridayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="400dp"
                android:layout_marginLeft="35dp"
                android:textSize="16sp"
                android:text="Friday" />

            <TextView
                android:id="@+id/timeText5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="400dp"
                android:layout_marginLeft="200dp"
                android:textSize="16sp"
                android:text="9:00 AM - 5:00 PM" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="450dp"
                android:src="@drawable/sunny_image"/>

            <TextView
                android:id="@+id/saturdayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="450dp"
                android:layout_marginLeft="35dp"
                android:textSize="16sp"
                android:text="Saturday" />

            <TextView
                android:id="@+id/timeText6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="450dp"
                android:layout_marginLeft="200dp"
                android:textSize="16sp"
                android:text="9:00 AM - 5:00 PM" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="500dp"
                android:src="@drawable/sunny_image"/>

            <TextView
                android:id="@+id/sundayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="500dp"
                android:layout_marginLeft="35dp"
                android:textSize="16sp"
                android:text="Sunday" />

            <TextView
                android:id="@+id/timeText7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="500dp"
                android:layout_marginLeft="200dp"
                android:textSize="16sp"
                android:text="9:00 AM - 5:00 PM" />

        </RelativeLayout>

    </ScrollView>

</LinearLayout>